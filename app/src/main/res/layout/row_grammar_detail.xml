<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Định nghĩa: "
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvDinhnghia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Định nghĩa"
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#323131"
        android:text="Cấu trúc: "
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvKhangdinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Khẳng định"
        android:textColor="#323131"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvNghivan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nghi vấn"
        android:textColor="#323131"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/tvPhudinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phủ định"
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chú thích: "
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvChuthich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chú thích"
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dấu hiệu: "
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/tvDauhieu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dấu hiệu"
        android:textColor="#323131"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ví dụ: "
        android:textSize="20dp"
        android:textColor="#323131"/>

    <TextView
        android:id="@+id/tvVidu"
        android:textColor="#323131"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ"
        android:textSize="20dp"/>

</LinearLayout>
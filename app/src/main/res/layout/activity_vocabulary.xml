<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgr_vcbl2"
    tools:context=".vocabulary.VocabularyActivity">

    <ImageButton
        android:id="@+id/ibtn_vocabulary"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vcl"
        tools:ignore="SpeakableTextPresentCheck" />

    <ListView
        android:id="@+id/listView_Topic"
        app:layout_constraintTop_toBottomOf="@+id/ibtn_vocabulary"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="495dp"
        android:background="@color/color_white"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="123dp" />

</androidx.constraintlayout.widget.ConstraintLayout>